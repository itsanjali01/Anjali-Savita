{{ 'Custom-banner.css' | asset_url | stylesheet_tag }}
<div class="top-bar">
  <div class="top-bar-left">TISSO VISION</div>
  <div class="top-bar-center">Find the ideal gift for your loved ones.</div>
  <a href="{{ section.settings.top_button_link }}" class="top-bar-button">CHOOSE GIFT →</a>
</div>

<div class="custom-banner" style="background-image: url('{{ 'watch.svg' | asset_url }}'), url('{{ 'lower.svg' | asset_url }}');">
  <div class="banner-content-wrapper">
    <div class="banner-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        <span class="button-text">{{ section.settings.button_text }}</span>
        <span class="arrow">→</span>
      </a>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}